<h2>User info</h2>

<%= form_with model: @user, url: edit_user_path(@user.id), method: :patch do |f| %>

<label>Name</label>
<%= f.text_field :name %>

<label>Image</label>
<%= f.file_field :profile_image %>

<label>Introduction</label>
<%= f.text_area :introduction %>

<%= f.submit 'Update User' %>

