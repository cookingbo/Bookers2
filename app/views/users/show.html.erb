<h2>Books</h2>

<!-- ユーザーの詳細 -->
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>

<!-- ユーザーの投稿一覧 -->
<%= @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= image_tag book.get_image %>
  <% end %>
  <p>Title</p>
  <%= @book.title %>
  <p>Opinion</p>
  <%= @book.body %>
</div>
<% end %>