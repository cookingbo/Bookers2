<%= flash[:notice] %>

<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/list', user: @user %>
        <%= render 'list', book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag @books.get_image %><br>
                <% end %>
                <%= link_to @user.name, user_path(@user.id) %>
              </td>
              <td>
                <%= link_to @books.title, book_path %>
              </td>
              <td>
                <%= @books.body %>
              </td>
              <% if @books.user == current_user %>
              <td>
                <%= link_to edit_book_path(@books), class: 'btn btn-sm btn-success' do %>
                  Edit
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@books), method: :delete, class: 'btn btn-sm btn-danger' do %>
                  Destroy
                <% end %>
              </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
