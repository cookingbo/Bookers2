<h2>Book detail</h2>

<div>
  <%= image_tag @book.get_image %><br>
  <%= link_to @user.name, user_path(@user.id) %>

  <%= link_to @book.title, book_path %>
  <%= @book.body %>
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
    <% end %>
</div>